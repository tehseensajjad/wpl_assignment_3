@model List<Student>;

@{
    ViewData["Title"] = "Students";
}

<a asp-controller="Students" asp-action="Create">Add Student</a>
@if (Model.Count > 0) {
    <h1>Students</h1>
    <table>
        <thead>
            <tr>
                <th>Roll Number</th>
                <th>Name</th>
                <th>Controls<th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student st in Model)
            {
                <tr>
                    <td width="20%">@st.RollNumber</td>
                    <td width="40%">@st.FirstName @st.LastName</td>
                    <td width="40%">
                        @Html.ActionLink("Remove", "Remove", "Students", new { rollnum = st.RollNumber } )
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
