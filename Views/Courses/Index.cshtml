@model List<Course>

@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Courses" asp-action="Create">Add Course</a>

@if (Model.Count > 0) {
    <h1>Courses</h1>
    <table>
        <thead>
            <tr>
                <th>Code</th>
                <th>Title</th>
                <th>Teacher</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Course cs in Model)
            {
                <tr>
                    <td width="10%">@cs.Code</td>
                    <td width="50%">@cs.Title</td>
                    <td width="20%">@cs.Teacher</td>
                    <td width="10%">
                        @Html.ActionLink("Remove", "Remove", "Courses", new { code = @cs.Code })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}